{
  "manifest_version": 2,
  "name": "Mercado Livre Plus",
  "description": "Extens√£o para Google Chrome que melhora a listagem de produtos no Mercado Livre.",
  "version": "0.0.0.7",
  "browser_action": {
    "default_icon": "icon96.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js",
      "jquery-3.2.0.min.js"
    ],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' https://http2.mlstatic.com; object-src 'self'",
  "content_scripts": [
    {
      "matches": [
        "*://*.mercadolivre.com.br/*"        
      ],
      "js": [
        "jquery-3.2.0.min.js",
        "main.js"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "*://*.mercadolivre.com.br/*"    
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "96": "icon96.png"
  }
}